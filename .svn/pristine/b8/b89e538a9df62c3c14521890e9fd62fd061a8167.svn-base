<!DOCTYPE html>
<html>
<head>
    <title>地球村后台管理中心</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/public/style.css"/>
    <!--<link rel="stylesheet" href="/css/edit/edit.css"/>-->
    <link rel="shortcut icon" href="/images/public/title_icon.png" type="image/x-icon">
</head>
<body class="bg">
<!--主要部分-->
<main id="main">
    <!--位置-->
    <div class="location">
        <location></location>
    </div>
    <div class="container loadding-box">
        <!--修改密码-->
        <table class="input-form mt20">
            <template v-if="caption">
                <tbody> 
                <tr>
                    <th></th>
                    <td><h4 class="caption {{captionClass}}">{{caption}}</h4></td>
                </tr>
                <template v-for="val in list">
                    <tr class="{{val.listClass}}"> 
                        <th>{{val.title}}</th> 
                        <td>
                            <input class="input input-long {{val.warning&&'warning'}}" type="password" v-model="val.value" v-on:focus="focus(val)" v-on:blur="val.blur(val,list)" placeholder="{{val.placeholder}}" value="{{val.value}}"/>
                            <div class="hint common">{{val.point}}</div>
                            <div class="hint short">{{val.hint}}</div>
                        </td>
                    </tr>
                </template> 
                <tr>
                    <th></th>
                    <td>
                        <div class="mt20">
                            <a href="javascript:void(0)" class="btn {{submitClass}} mr10" v-on:click="submit">{{submitValue}}</a>
                            <a href="javascript:void(0)" class="btn {{cancelClass}}" onclick="history.go(-1)">{{cancelValue}}</a>
                        </div>
                    </td>
                </tr>
                </tbody>
            </template>
        </table>
    </div>
</main>
</body>
<script src="/js/common.js" data-main="/js/user/editPassword.js"></script>
</html>
